<div class="row mt-5">
    <div class="col-md-6 m-auto">
      <div class="card card-body">
        <h1 class="text-center mb-3">
          <i class="fas fa-user-plus"></i> Appointment
        </h1>
         
  
        <%- include ('partials/messages') %>
  
        <form action="/users/register" method="POST">
          <div class="form-group">
            <label for="name">Name</label>
            <input
              type="name"
              id="name"
              name="fullname"
              class="form-control"
              placeholder="Enter Name"
              required
              value="<%= typeof name != 'undefined' ? name : '' %>"
              
            />
          </div>
          <div class="form-group">
            <label for="email">Email</label>
            <input
              type="email"
              id="email"
              name="email"
              class="form-control"
              placeholder="Enter Email"
              required
              value="<%= typeof email != 'undefined' ? email : '' %>"
            />
          </div>
          <div class="form-group">
            <label for="Gender">Gender</label>
            <input
              type="text"
              id="gender"
              name="gender"
              class="form-control"
              placeholder="Input Gender"
              required
              value="<%= typeof Gender != 'undefined' ? Gender : '' %>"
            />
          </div>
          <div class="form-group">
            <label for="weight">Weight</label>
            <input
              type="text"
              id="text"
              name="weight"
              class="form-control"
              placeholder="Input Weight"
              required
              value="<%= typeof Weight != 'undefined' ? Weight : '' %>"
            />
          </div>
          <div class="form-group">
            <label for="blood_group">Blood Group</label>
            <input
              type="text"
              id="blood_group"
              name="blood_group"
              class="form-control"
              placeholder="Input Blood Group"
              required
              value="<%= typeof blood_group != 'undefined' ? blood_group : '' %>"
            />
          </div>
          <div class="form-group">
            <label for="phone_no">Phone_no</label>
            <input
              type="number"
              id="phone_no"
              name="phone_no"
              class="form-control"
              placeholder="Input Phone number"
              required
              value="<%= typeof phone_no != 'undefined' ? phone_no : '' %>"
            />
          </div>
          <div class="form-group">
            <label for="date">DATE OF APPOINTMENT</label>
            <input
              type="date"
              id="date"
              name="date_appointment"
              class="form-control"
              required
              value="<%= typeof date != 'undefined' ? date : '' %>"
            />
          </div>
        <div class="form-group">
          <label for="test_type">test_type</label>
          <input
            type="text"
            id="test"
            name="test_type"
            class="form-control"
            placeholder="Input Test Type"
            required
            value="<%= typeof test != 'undefined' ? test : '' %>"
          />
        </div>
           <button type="submit" class="btn btn-primary btn-block">
            Register
          </button>
        </form>
      </div>
    </div>
  </div>