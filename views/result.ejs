.wrapper {
  width: 100%;
  background: whitesmoke;
  border-radius: 20px;
  box-shadow: 0px 4px 10px 1px rgba(0, 0, 0, 0.1);
}
.wrapper .title {
  color: #323b8b;
  font-size: 20px;
