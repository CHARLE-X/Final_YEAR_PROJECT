  transition: all 0.3s ease;
}
form .row input::placeholder {
  color: #999;
}
.wrapper form .row i {
  position: absolute;
  width: 47px;
  height: 100%;
  color: #fff;
  font-size: 18px;
  background: #3a557d;
  border: 1px solid #3a557d;
  border-radius: 5px 0 0 5px;
