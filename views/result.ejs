  margin-bottom: 10px;
  text-align: center;
}
.wrapper form {
  padding: 30px 40px 40px 40px;
  background-color:  #F1F7FD; 
}
.wrapper form .row {
  height: 50px;
  margin-bottom: 15px;
  position: relative;
  
}
.wrapper form .row input {
  width: 100%;
  outline: none;
  border-radius: 5px;
  border: none;
  height: 50px;
  border: none;
  border-bottom: 1px solid rgba(50, 59, 139, 0.5);
  font-size: 16px;
  transition: all 3.s ease;
}
